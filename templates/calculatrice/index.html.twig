{% extends 'layout.html.twig' %}

{% block title %}Calculatrice {% endblock %}

{% block body %}
 
 <h1>Calculatrice</h1>
 <form method="POST">
    <input type="number" name="a" value="{{a}}" />
    <select name="op">
        <option value="+">+</option>
        <option value="-">-</option>
        <option value="/">/</option>
        <option value="*">*</option>
    </select>
    <input type="number" name="b"  value="{{b}}" />
    <input type="submit" value="Calculer"/>
 </form>

{% if(result is not null ) %}
      = {{result}}
{% endif %}

<hr/>

<input name="resCalc2" type="text" placeholder="Resulat de calcul" /></br></br>
{% for i in 0..9 %}
     <input type="button" name="numberCalc2" value="{{i}}" />
{% endfor %}
</br></br>
 <input type="button" name="opCalc2" value="+" />
 <input type="button" name="opCalc2" value="/" />
 <input type="button" name="opCalc2" value="*" />
 <input type="button" name="opCalc2" value="-" />
</br></br>
<input type="button" value="Calculer"/>
{% endblock %}
